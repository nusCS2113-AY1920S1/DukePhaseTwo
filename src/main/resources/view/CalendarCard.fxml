<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane fx:id="calendarCard" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
           onMouseClicked="#onClick" onMouseEntered="#onMouseEnter" onMouseExited="#onMouseExit">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <Label fx:id="day" text="1" StackPane.alignment="TOP_RIGHT"/>
    <Label fx:id="task" StackPane.alignment="TOP_LEFT"/>
    <Label fx:id="description" StackPane.alignment="CENTER"/>
</StackPane>
